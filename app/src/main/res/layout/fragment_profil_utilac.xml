<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/LblMajProfilAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="Mettre Ã  jour votre profil"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/modif_password_utilAC"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblMajProfilAc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:autofillHints="Password"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/modifAdresseUtilAc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modif_password_utilAC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="Adresse postale"
        android:hint="Adresse postale"
        android:inputType="textPostalAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/modifRibUtilAc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifAdresseUtilAc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="Rib"
        android:hint="Rib"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/modifEmailUtilAc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/modifRibUtilAc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="Email"
        android:hint="Email"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/modifProfilUtilAc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifEmailUtilAc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:text="Modifier" />

</RelativeLayout>